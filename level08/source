#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <fcntl.h>

int main(int argc, char **argv) {
    FILE *log_file;
    FILE *source_file;
    int dest_fd;
    char dest_path[100];
    char buf[1024];
    int bytes_read;

    if (argc != 2) {
        printf("Usage: %s filename\n", argv[0]);
        log_file = fopen("./backups/.log", "w");
        if (log_file == NULL) {
            printf("ERROR: Failed to open ./backups/.log\n");
            exit(1);
        }
        fprintf(log_file, "LOG: Failed usage.\n");
        fclose(log_file);
        return 1;
    }

    log_file = fopen("./backups/.log", "w");
    if (log_file == NULL) {
        printf("ERROR: Failed to open ./backups/.log\n");
        exit(1);
    }
    fprintf(log_file, "LOG: Starting back up: %s\n", argv[1]);
    fclose(log_file);

    source_file = fopen(argv[1], "r");
    if (source_file == NULL) {
        printf("ERROR: Failed to open %s\n", argv[1]);
        exit(1);
    }

    strcpy(dest_path, "./backups/");
    strcat(dest_path, argv[1]);

    dest_fd = open(dest_path, O_WRONLY | O_CREAT | O_EXCL, 0660);
    if (dest_fd < 0) {
        printf("ERROR: Failed to open %s\n", dest_path);
        exit(1);
    }

    while ((bytes_read = fread(buf, 1, 1, source_file)) > 0) {
        write(dest_fd, buf, bytes_read);
    }

    close(dest_fd);
    fclose(source_file);

    return 0;
}
