#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void)
{
    char s2[96];        // [rbp-110h] - Password input
    int v5;             // [rbp-B0h]
    char ptr[48];       // [rbp-A0h]  - Real password from file (41 bytes)
    char s[96];         // [rbp-70h]  - Username input
    int v8;             // [rbp-10h]
    int v9;             // [rbp-Ch]
    FILE *stream;       // [rbp-8h]

    memset(s, 0, sizeof(s));
    v8 = 0;
    memset(ptr, 0, 41);
    memset(s2, 0, sizeof(s2));
    v5 = 0;
    stream = NULL;
    v9 = 0;

    // Read the real password from level03's password file
    stream = fopen("/home/users/level03/.pass", "r");
    if (!stream)
    {
        fwrite("ERROR: failed to open password file\n", 1, 36, stderr);
        exit(1);
    }

    v9 = fread(ptr, 1, 41, stream);
    ptr[strcspn(ptr, "\n")] = 0;  // Remove newline

    if (v9 != 41)
    {
        fwrite("ERROR: failed to read password file\n", 1, 36, stderr);
        fwrite("ERROR: failed to read password file\n", 1, 36, stderr);
        exit(1);
    }

    fclose(stream);

    // Display login prompt
    puts("===== [ Secure Access System v1.0 ] =====");
    puts("/***************************************\\");
    puts("| You must login to access this system. |");
    puts("\\**************************************/");

    // Get username
    printf("--[ Username: ");
    fgets(s, 100, stdin);
    s[strcspn(s, "\n")] = 0;

    // Get password
    printf("--[ Password: ");
    fgets(s2, 100, stdin);
    s2[strcspn(s2, "\n")] = 0;

    puts("*****************************************");

    // Check if password is correct
    if (strncmp(ptr, s2, 41))
    {
        // VULNERABILITY: Format string bug!
        // Username is passed directly to printf without format string
        printf(s);  // Should be: printf("%s", s);

        puts(" does not have access!");
        exit(1);
    }

    // Password is correct - grant access
    printf("Greetings, %s!\n", s);
    system("/bin/sh");

    return 0;
}